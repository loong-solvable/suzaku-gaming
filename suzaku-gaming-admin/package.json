{
  "name": "suzaku-gaming-admin",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx --fix",
    "lint:style": "stylelint \"**/*.{vue,scss,css}\" --fix",
    "format": "prettier --write src/",
    "type-check": "vue-tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:visual": "playwright test e2e/visual/",
    "test:visual:update": "playwright test e2e/visual/ --update-snapshots",
    "test:all": "pnpm test:coverage && pnpm test:e2e"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "axios": "^1.6.0",
    "dayjs": "1.11.10",
    "element-plus": "2.6.1",
    "pinia": "2.1.7",
    "vue": "3.4.21",
    "vue-router": "4.3.0"
  },
  "devDependencies": {
    "@playwright/test": "1.41.0",
    "@types/mockjs": "^1.0.10",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^4.0.18",
    "@vue/test-utils": "2.4.5",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-vue": "^10.7.0",
    "jsdom": "^28.0.0",
    "mockjs": "1.1.0",
    "postcss": "^8.5.6",
    "postcss-html": "^1.8.1",
    "prettier": "3.2.5",
    "sass": "1.97.3",
    "stylelint": "16.2.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recess-order": "^7.6.0",
    "stylelint-config-standard-scss": "^17.0.0",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vitest": "1.5.0",
    "vue-tsc": "^3.1.4"
  }
}
